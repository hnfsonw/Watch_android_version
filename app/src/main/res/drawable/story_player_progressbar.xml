<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/progressbar_background"><!-- 正常情况下的效果 -->
        <shape>
            <corners android:radius="2dip" /><!-- 设置圆角半径 -->
            <gradient
            android:angle="270"
            android:centerColor="#e5e5e5"
            android:centerY="2.0"
            android:endColor="#e5e5e5"
            android:startColor="#e5e5e5" />
        </shape>
    </item>
    <item android:drawable="@drawable/progressbar_progress"><!-- 时行中的效果 -->
        <clip>
            <shape>
                <corners android:radius="2dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#e12328"
                    android:centerY="2.0"
                    android:endColor="#e12328"
                    android:startColor="#e12328" />
            </shape>
        </clip>
    </item>
</layer-list>