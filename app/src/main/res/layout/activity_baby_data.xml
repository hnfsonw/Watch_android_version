<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/contact_title"/>



    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/baby_watch"
            android:id="@+id/imageView"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/separator_register"/>

        <TextView
            android:layout_marginLeft="12dp"
            android:text="@string/watch_phone"
            android:textSize="14sp"
            android:textColor="@color/phone_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.loybin.baidumap.ui.view.LastInputEditText
            android:phoneNumber="true"
            android:layout_marginLeft="32dp"
            android:id="@+id/et_watch_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入宝贝电话号码"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/the_main_color"
            android:textColorHint="@color/et_white"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/iv_contacts"
            android:layout_marginRight="20dp"
            android:src="@drawable/contacts_icon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/edge_shape_white_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >
        <View
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/text_main_color"
            />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/edge_shape_white_selector"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/baby_name"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/separator_register"/>
        <TextView
            android:text="@string/baby_name"
            android:textSize="14sp"
            android:textColor="@color/phone_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.loybin.baidumap.ui.view.LastInputEditText
            android:layout_marginLeft="32dp"
            android:id="@+id/et_baby_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/enter_the_baby_nickname"
            android:maxLength="8"
            android:singleLine="true"
            android:textColor="@color/the_main_color"
            android:textColorHint="@color/et_white"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >
        <View
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/text_main_color"
            />

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/edge_shape_white_selector"
        android:id="@+id/ll_chek_baby"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >


            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/baby_birthday"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:src="@mipmap/separator_register"/>
        <TextView
            android:id="@+id/tv_baby_sr"
            android:text="@string/baby_birthday"
            android:textSize="14sp"
            android:textColor="@color/phone_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/et_birthday"
            android:layout_marginLeft="32dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/click_on_the_select_baby_birthday"
            android:singleLine="true"
            android:textColor="@color/the_main_color"
            android:textColorHint="@color/et_white"
            android:textSize="14sp" />

        <ImageView
            android:layout_marginRight="15dp"
            android:src="@drawable/regiht_"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >
        <View
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/text_main_color"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/edge_shape_white_selector"
        android:id="@+id/ll_parents_relationship"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >



        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/baby_name"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/separator_register"/>

        <TextView
            android:id="@+id/tv_jagx"
            android:text="@string/parents_relationship"
            android:textSize="14sp"
            android:textColor="@color/phone_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_jagx"
            android:layout_marginLeft="32dp"
            android:id="@+id/et_relation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/click_on_the_select_parents_relationship"
            android:singleLine="true"
            android:textColor="@color/the_main_color"
            android:textColorHint="@color/et_white"
            android:textSize="14sp" />

        <ImageView
            android:layout_marginRight="15dp"
            android:src="@drawable/regiht_"
            android:layout_width="16dp"
            android:layout_height="16dp"/>



    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >
        <View
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/text_main_color"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:textSize="14sp"
        android:layout_margin="30dp"
        android:background="@color/text_pink"
        android:id="@+id/btn_complete"
        android:text="@string/role_addDevice_btn_text"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>