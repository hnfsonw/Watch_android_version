<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="50dp">

    <RelativeLayout
        android:background="@drawable/selete_shape_corners_tou_black_mask_home"
        android:id="@+id/rl_admin"
        android:layout_width="174dp"
        android:layout_height="50dp">
        <com.loybin.baidumap.ui.view.CircleImageView
            android:layout_marginLeft="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/add_device"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <com.loybin.baidumap.ui.view.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_icon"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/a"
            android:layout_width="36dp"
            android:layout_height="36dp"/>

        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:id="@+id/ll_texts"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:maxLength="16"
                android:singleLine="true"
                android:id="@+id/tv_relationship"
                android:textColor="@color/add_device"
                android:textSize="14sp"
                android:layout_width="75dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <ImageView
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_administrator"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@mipmap/ok_nice"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_below="@id/ll_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/the_main_color"
                android:id="@+id/tv_phone"
                android:text="13487871199"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_cornet"
                android:visibility="gone"
                android:layout_marginLeft="12dp"
                android:text="@string/cornet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
