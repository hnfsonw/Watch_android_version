<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_admin"
        android:background="@drawable/edge_shape_white_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.loybin.baidumap.ui.view.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/a"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_texts"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:maxLength="16"
                android:id="@+id/tv_relationship"
                android:textColor="@color/setting_grey"
                android:textSize="14sp"
                android:text="@string/mother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_marginRight="30dp"
                android:visibility="invisible"
                android:id="@+id/tv_administrator"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@mipmap/administrator"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_below="@id/ll_texts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/the_main_color"
                android:id="@+id/tv_phone"
                android:text="13487871199"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_cornet"
                android:visibility="gone"
                android:layout_marginLeft="12dp"
                android:text="@string/cornet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
