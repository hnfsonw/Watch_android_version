<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/step_counter_background">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:paddingLeft="14dp"
            android:paddingRight="18dp">

            <ImageView
                android:clickable="true"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                />

        </LinearLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/tv_title"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="计步排行"
            />

        <com.loybin.baidumap.ui.view.CircleImageView
            android:layout_below="@id/tv_title"
            android:id="@+id/iv_head"
            android:layout_marginTop="23dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/elder_sister"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/tv_baby_rownum"
            android:layout_alignRight="@+id/iv_head"
            android:layout_alignBottom="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@mipmap/step_first"/>

        <TextView
            android:id="@+id/tv_baby_name"
            android:text="女宝宝"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_below="@id/iv_head"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_baby_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:text="224567"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_toRightOf="@id/tv_steps"
            android:layout_below="@id/tv_baby_name"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="2dp"
            android:text="步"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_step_counter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>