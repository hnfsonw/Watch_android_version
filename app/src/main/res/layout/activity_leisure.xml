<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/contact_title"/>



    <LinearLayout
        android:background="@color/application_of_the_base_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_leisure"
        android:background="@drawable/edge_shape_white_selector"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/baby_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/separator_register"/>

        <TextView
            android:layout_marginLeft="12dp"
            android:text="称呼"
            android:textSize="14sp"
            android:textColor="@color/phone_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:editable="false"
            android:id="@+id/et_leisure_name"
            android:layout_marginLeft="57dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/the_main_color"
            android:textColorHint="@color/text_main_color"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/iv_iv"
            android:visibility="gone"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/regiht_"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:background="@drawable/edge_shape_white_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >
        <View
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/text_main_color"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_text"
        android:background="@drawable/edge_shape_white_selector"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/phone_register"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/separator_register"/>

        <TextView
            android:layout_marginLeft="12dp"
            android:text="手机号码"
            android:textSize="14sp"
            android:textColor="@color/phone_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_gravity="center"
            android:id="@+id/et_phone_number"
            android:layout_marginLeft="29dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/the_main_color"
            android:textColorHint="@color/text_main_color"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >
        <View
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/text_main_color"
            />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_text_shortPhone"
            android:background="@drawable/edge_shape_white_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/phone_register"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/separator_register"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:text="短号/亲情号"
                android:textSize="14sp"
                android:textColor="@color/phone_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_gravity="center"
                android:id="@+id/et_leisure_shortPhone"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="未设置"
                android:maxLength="8"
                android:singleLine="true"
                android:textColor="@color/the_main_color"
                android:textColorHint="@color/text_main_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_edit_shortPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="@color/text_pink"
                android:text="编辑短号/亲情号"/>
        </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >
        <View
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/text_main_color"
            />

    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_attribute"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="@color/the_main_color"
            android:id="@+id/tv_attribute"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_delete"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="@color/Color_Red"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:text="@string/delete_leisure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:textSize="14sp"
            android:background="@drawable/btn_shape_corners_tou_black_mask_code"
            android:id="@+id/btn_complete"
            android:text="@string/update_the_name_card"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>