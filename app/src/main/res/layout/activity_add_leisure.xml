<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/contact_title"/>

    <LinearLayout
        android:background="@color/application_of_the_base_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/edge_shape_white_selector"
        android:id="@+id/ll_parents_relationship"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/baby_name"/>

            <ImageView
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/separator_register"/>

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:id="@+id/tv_jagx"
                android:text="@string/parents_relationship"
                android:textSize="14sp"
                android:textColor="@color/phone_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_jagx"
                android:layout_marginLeft="32dp"
                android:id="@+id/et_relation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/click_on_the_select_parents_relationship"
                android:singleLine="true"
                android:textColor="@color/the_main_color"
                android:textColorHint="@color/text_main_color"
                android:textSize="14sp" />

            <ImageView
                android:layout_marginRight="26dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/regiht_"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        >
        <View
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/text_main_color"
            />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/edge_shape_white_selector"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/phone_register"/>

        <ImageView
            android:layout_marginLeft="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/separator_register"/>


        <TextView
            android:layout_marginLeft="12dp"
            android:text="@string/phone_number"
            android:textSize="14sp"
            android:textColor="@color/phone_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"/>

        <com.loybin.baidumap.ui.view.LastInputEditText
            android:phoneNumber="true"
            android:layout_marginLeft="32dp"
            android:id="@+id/et_phone_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/add_phone_number_input"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/the_main_color"
            android:textColorHint="@color/text_main_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_contacts"
            android:layout_marginRight="20dp"
            android:src="@drawable/contacts_icon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >
            <View
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:background="@color/text_main_color"
                />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/edge_shape_white_selector"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone_register"/>

            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/separator_register"/>


            <TextView
                android:layout_marginLeft="12dp"
                android:text="短号/亲情号"
                android:textSize="14sp"
                android:textColor="@color/phone_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.loybin.baidumap.ui.view.LastInputEditText
                android:phoneNumber="true"
                android:layout_marginLeft="12dp"
                android:id="@+id/et_leisure_shortPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint="@string/add_phone_number_input"
                android:maxLength="8"
                android:singleLine="true"
                android:textColor="@color/the_main_color"
                android:textColorHint="@color/text_main_color"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:textSize="12sp"
                android:id="@+id/cb_add_watch"
                android:layout_marginTop="4dp"
                android:textColor="@color/title"
                android:layout_marginRight="12dp"
                android:text="邀请绑定手表"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

       <LinearLayout
           android:visibility="gone"
           android:id="@+id/ll_attribute"
           android:layout_marginTop="40dp"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <TextView
               android:textColor="@color/the_main_color"
               android:id="@+id/tv_attribute"
               android:gravity="center"
               android:layout_gravity="center"
               android:textSize="14sp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_delete"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/Color_Red"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:text="@string/delete_leisure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    <LinearLayout
        android:background="@color/application_of_the_base_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:visibility="visible"
            android:textSize="14sp"
            android:layout_margin="30dp"
            android:background="@color/title"
            android:id="@+id/btn_complete"
            android:text="@string/role_addDevice_btn_text"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>