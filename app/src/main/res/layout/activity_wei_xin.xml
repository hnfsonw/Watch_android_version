<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_title"></include>

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/huyux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="12dp"
        android:textColor="@color/send_btn"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:text="微信公众号:华域在线"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/imageView3"/>

    <TextView
        android:layout_marginTop="12dp"
        android:textColor="@color/send_btn"
        android:textSize="14sp"
        android:text="保存到相册,　在微信中扫描二维码\n                         并关注"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="保存到相册"
        android:background="@drawable/btn_shape_corners_tou_black_mask_ddd"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>