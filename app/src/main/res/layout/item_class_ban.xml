<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_class_ban_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/setting_grey"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="34dp"
            android:layout_marginBottom="19dp"
            android:text="名称1"/>

        <ImageView
            android:id="@+id/iv_class_ban_on"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="18dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@mipmap/on"/>

        <ImageView
            android:id="@+id/iv_class_ban_off"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="18dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@mipmap/off"/>

        <ImageView
            android:id="@+id/iv_class_ban_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/delete"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/underline_register"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="34dp"
        android:paddingBottom="19dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期"
                android:textSize="15sp"
                android:textColor="@color/setting_grey"/>

            <TextView
                android:id="@+id/tv_cycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:textSize="15sp"
                android:text="一"
                android:textColor="@color/phone_grey"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_morning"
            android:layout_below="@id/ll_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上午"
                android:textSize="15sp"
                android:textColor="@color/setting_grey"
                />

            <TextView
                android:id="@+id/tv_morning_time"
                android:layout_marginLeft="27dp"
                android:text="08:00-11:30"
                android:textSize="15sp"
                android:textColor="@color/phone_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_afternoon"
            android:layout_below="@+id/ll_morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                android:text="下午"
                android:textSize="15sp"
                android:textColor="@color/setting_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_afternoon_time"
                android:layout_marginLeft="27dp"
                android:text="08:00-11:30"
                android:textSize="15sp"
                android:textColor="@color/phone_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_evening"
            android:layout_below="@id/ll_afternoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                android:text="晚上"
                android:textSize="15sp"
                android:textColor="@color/setting_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_evening_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00-11:30"
                android:textSize="15sp"
                android:textColor="@color/phone_grey"
                android:layout_marginLeft="27dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="8dp">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/regiht_"/>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>