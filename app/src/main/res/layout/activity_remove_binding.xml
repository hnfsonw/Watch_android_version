<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:background="@color/the_main_color"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/include_title"></include>
    <LinearLayout
        android:background="@color/application_of_the_base_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_remove_hand_over"
            android:layout_marginTop="10dp"
            android:background="@drawable/edge_shape_white_selector"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"
                android:textColor="@color/the_main_color"
                android:text="@string/remove_the_binding_and_hand_over_power_to_other_yong_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >
            <View
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:background="@color/text_main_color"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_remove_binding"
            android:background="@drawable/edge_shape_white_selector"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"
                android:textColor="@color/the_main_color"
                android:text="@string/remove_other_users_binding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >
            <View
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"
                android:background="@color/text_main_color"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_remove_all"
            android:background="@drawable/edge_shape_white_selector"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"
                android:textColor="@color/the_main_color"
                android:text="@string/remove_all_the_binding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>