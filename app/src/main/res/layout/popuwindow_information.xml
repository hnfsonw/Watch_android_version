<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <ImageView
        android:layout_centerInParent="true"
        android:src="@mipmap/oavl"
        android:visibility="visible"
        android:id="@+id/iv_oval"
        android:layout_width="180dp"
        android:layout_height="180dp"></ImageView>


    <RelativeLayout
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:id="@+id/rl_icon"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="56dp">
        <com.loybin.baidumap.ui.view.CircleImageView
            android:visibility="invisible"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:id="@+id/civ_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="62dp"
        android:layout_marginLeft="66dp"
        android:layout_below="@id/rl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="invisible"
            android:gravity="center"
            android:id="@+id/tv_ms"
            android:textSize="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:background="@color/application_of_color"
            android:text="6分在前"
            android:layout_width="44dp"
            android:layout_height="22dp"/>
    </LinearLayout>


</RelativeLayout>