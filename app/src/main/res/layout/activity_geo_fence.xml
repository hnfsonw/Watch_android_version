<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/include_title"/>

    <RelativeLayout
        android:background="@mipmap/rail_tipss"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_tips"
        android:background="@color/application_of_the_base_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_marginTop="10dp"
        android:id="@+id/swiper_geofence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/list_geofence"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />

    </android.support.v4.widget.SwipeRefreshLayout>

    </RelativeLayout>
    <Button
        android:textColor="@color/white"
        android:background="@color/text_pink"
        android:id="@+id/btn_add"
        android:layout_alignParentBottom="true"
        android:text="@string/add_the_safety_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>