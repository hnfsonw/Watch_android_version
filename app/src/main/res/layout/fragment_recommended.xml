<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
    android:visibility="visible"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageView
            android:background="@color/white"
            android:scaleType="fitXY"
            android:id="@+id/iv_max_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/ll_there"
        android:padding="10dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/palce_track"
                android:scaleType="fitXY"
                android:id="@+id/iv_cover"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:id="@+id/tv_one"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:textColor="@color/send_btn"
                android:textSize="12sp"
                android:text="@string/the_last_play"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="暂无播放历史"
                android:id="@+id/tv_title_hist"
                android:textSize="14sp"
                android:textColor="@color/send_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_title"
                android:textSize="12sp"
                android:textColor="@color/send_btn"
                android:layout_marginLeft="6dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"
                android:id="@+id/tv_into"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    </RelativeLayout>

</LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/tv_tv"
        android:background="@color/Color_ActivityBackground"
        android:orientation="horizontal"
            android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:textColor="@color/send_btn"
            android:textSize="14sp"
            android:text="@string/search_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="12dp"
            android:id="@+id/tv_view_more"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:textColor="@color/send_btn"
            android:textSize="14sp"
            android:text="@string/view_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_story_history"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

               <android.support.v7.widget.RecyclerView
                   android:layout_marginTop="3dp"
                   android:background="@color/white"
                   android:id="@+id/lv_listview"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
               </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
            android:padding="5dp"
        android:background="@color/Color_ActivityBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_like"
            android:textColor="@color/send_btn"
            android:textSize="14sp"
            android:text="@string/guess_you_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <GridView
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@color/transparent"
            android:numColumns="3"
            android:id="@+id/gv_listen_story"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp">
        </GridView>

        <LinearLayout
            android:background="@color/white"
            android:visibility="visible"
            android:id="@+id/tv_batch"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_vertical"
                android:textColorHint="@color/add_device"
                android:textSize="14sp"
                android:hint="@string/in_a_batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_time"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/in_time"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/ximalaya_intro"
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>