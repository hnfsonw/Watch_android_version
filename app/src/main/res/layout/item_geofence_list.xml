<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"
         >

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/safe_area"/>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/ic_separator"
            android:layout_toRightOf="@id/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/separator_register"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:id="@+id/position_title"
            android:orientation="vertical"
            android:layout_toRightOf="@id/ic_separator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp">

            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/geo_gence_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深大地铁站"
                android:textSize="14sp"
                android:textColor="@color/position_title"/>

            <TextView
                android:visibility="visible"
                android:id="@+id/geo_gence_address"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:lines="2"
                android:textSize="10sp"
                android:textColor="@color/phone_grey"
                android:text="深大"/>
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_switch"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@mipmap/on"/>

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/delete"
                android:id="@+id/iv_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>