<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.loybin.baidumap.ui.view.CircleImageView
            android:id="@+id/iv_head_item"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/elder_sister"/>

        <TextView
            android:id="@+id/tv_step_counter_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="1"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_alignRight="@+id/iv_head_item"
            android:layout_alignBottom="@id/iv_head_item"
            android:background="@mipmap/step_other"/>

        <TextView
            android:id="@+id/tv_baby_name_item"
            android:layout_toRightOf="@+id/iv_head_item"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="31dp"
            android:text="女宝贝"
            android:textSize="14sp"
            android:textColor="@color/address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_steps_item"
            android:layout_below="@+id/tv_baby_name_item"
            android:layout_toRightOf="@id/iv_head_item"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="2dp"
            android:text="204567"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/step_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_toRightOf="@+id/tv_steps_item"
            android:layout_below="@id/tv_baby_name_item"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="6dp"
            android:text="步"
            android:textColor="@color/step_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
</LinearLayout>