    </style>

    <style name="Text_Color_White_GradeTwo" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/Color_White</item>
        <item name="android:textSize">@dimen/TextView_TextSize_GradeTwo</item>
    </style>


    <style name="Text_Color_GrayDeep_GradeThree" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/Color_Gray_Deep</item>
