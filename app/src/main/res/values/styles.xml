    <color name="btn_gray_normal">#c0c0c0</color>

    <style name="story_player_progressBar_style" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressBarStyle">@drawable/story_player_progressbar</item>
    </style>

    <style name="phone_enquiry_request">
        <item name="android:background">@drawable/phone_cost_shape_white</item>
    </style>

